[
  {
    "context": "Editor && vim_mode == normal && !menu && !VimWaiting",
    "bindings": {
      "space r": ["task::Spawn", { "task_name": "run '$ZED_FILE'" }],
      "f": "file_finder::Toggle",
      "t": "terminal_panel::ToggleFocus",
      "ctrl-h": "workspace::ActivatePaneLeft",
      "ctrl-l": "workspace::ActivatePaneRight",
      "space p": "projects::OpenRecent"
    }
  },
  {
    "context": "Editor && vim_mode == visual && !menu && !VimWaiting",
    "bindings": {
      "space r": ["task::Spawn", { "task_name": "execute selection" }],
      "space l": "assistant::QuoteSelection",
      "cmd-l": "assistant::QuoteSelection"
    }
  }, 
  {
    "context": "Editor && VimControl && !VimWaiting && !menu",
    "bindings": {
      "space o": "file_finder::Toggle",
      "space t": "terminal_panel::ToggleFocus",
      "space f": "file_finder::Toggle",
      "space p": "projects::OpenRecent"
    }
  },
  {
    "bindings": {
      "cmd-p": "command_palette::Toggle",
      "cmd-l": "agent::ToggleFocus",
      "cmd-[": "pane::GoBack",
      "cmd-]": "pane::GoForward",
      "cmd-i": "assistant::InlineAssist",
      "cmd-o": "file_finder::Toggle"
    }
  },
  {
    "context": "Terminal",
    "bindings": {
      "escape": "terminal_panel::ToggleFocus",
      "cmd-t": "workspace::NewTerminal",
      "cmd-n": "workspace::NewTerminal"
    }
  },
  {
    "context": "AgentPanel",
    "bindings": {
      "cmd-n": "agent::NewThread",
      "cmd-w": "workspace::CloseActiveDock",
      "cmd-l": "workspace::CloseActiveDock"
    }
  },
  {
    "context": "(((((((((((AgentPanel || GitPanel) || ProjectPanel) || CollabPanel) || OutlinePanel) || ChatPanel) || VimControl) || EmptyPane) || SharedScreen) || MarkdownPreview) || KeyContextView) || DebugPanel)",
    "bindings": {
      "alt-h": "workspace::ActivatePaneLeft"
    }
  },
  {
    "context": "(((((((((((AgentPanel || GitPanel) || ProjectPanel) || CollabPanel) || OutlinePanel) || ChatPanel) || VimControl) || EmptyPane) || SharedScreen) || MarkdownPreview) || KeyContextView) || DebugPanel)",
    "bindings": {
      "alt-k": "workspace::ActivatePaneUp"
    }
  },
  {
    "context": "(((((((((((AgentPanel || GitPanel) || ProjectPanel) || CollabPanel) || OutlinePanel) || ChatPanel) || VimControl) || EmptyPane) || SharedScreen) || MarkdownPreview) || KeyContextView) || DebugPanel)",
    "bindings": {
      "alt-l": "workspace::ActivatePaneRight"
    }
  },
  {
    "context": "(((((((((((AgentPanel || GitPanel) || ProjectPanel) || CollabPanel) || OutlinePanel) || ChatPanel) || VimControl) || EmptyPane) || SharedScreen) || MarkdownPreview) || KeyContextView) || DebugPanel)",
    "bindings": {
      "alt-j": "workspace::ActivatePaneDown"
    }
  }
]
